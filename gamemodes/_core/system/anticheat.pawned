#file "anticheat"
#include <YSI_Coding\y_hooks>
#include <YSI_Coding\y_timers>
#include <YSI_Data\y_iterate>

ptask moneyCheck[1000](playerid)
{
	if( GetPlayerMoney( playerid ) != pInfo[playerid][MoneyBalance] )
	{
	    ResetPlayerMoney(playerid);
	    Text_Send( playerid , $FUCK_U_FAGGOT );
	    GivePlayerMoney(playerid,pInfo[playerid][MoneyBalance]-5000);
	    
	}

	SetPlayerScore(playerid,pInfo[playerid][MoneyBalance]);

}
